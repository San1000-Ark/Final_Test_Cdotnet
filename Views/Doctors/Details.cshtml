@model Test_Santiagorestrepoarismendy.Models.Doctor
@{
    ViewData["Title"] = "Doctor Details";
}
<h1 class="text-center my-4">Doctor Details</h1>

<div class="card w-50 mx-auto shadow p-4">
    <dl class="row">
        <dt class="col-sm-4">Name:</dt>
        <dd class="col-sm-8">@Model.Name</dd>

        <dt class="col-sm-4">Last Name:</dt>
        <dd class="col-sm-8">@Model.LastName</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Specialty:</dt>
        <dd class="col-sm-8">@Model.Specialty</dd>
    </dl>

    <div class="text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>