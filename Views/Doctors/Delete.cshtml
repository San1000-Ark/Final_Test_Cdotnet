@model Test_Santiagorestrepoarismendy.Models.Doctor
@{
    ViewData["Title"] = "Delete Doctor";
}
<h1 class="text-center my-4 text-danger">Are you sure you want to delete this doctor?</h1>

<div class="card w-50 mx-auto shadow p-4">
    <dl class="row">
        <dt class="col-sm-4">Name:</dt>
        <dd class="col-sm-8">@Model.Name</dd>

        <dt class="col-sm-4">Last Name:</dt>
        <dd class="col-sm-8">@Model.LastName</dd>

        <dt class="col-sm-4">Email:</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Specialty:</dt>
        <dd class="col-sm-8">@Model.Specialty</dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-end mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>