@model Test_Santiagorestrepoarismendy.Models.Appointment

@{
    ViewData["Title"] = "Editar Cita";
}

<h2>Edit appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Date</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Observation</label>
        <input asp-for="Observations" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Doctor</label>
        <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control"></select>
    </div>

    <div class="form-group mb-3">
        <label>Patient</label>
        <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-warning">Save changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>