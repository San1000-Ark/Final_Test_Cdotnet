@model IEnumerable<Test_Santiagorestrepoarismendy.Models.Appointment>
@{
    var doctor = ViewData["Doctor"] as Test_Santiagorestrepoarismendy.Models.Doctor;
    ViewData["Title"] = $"Appointments for Dr. {doctor?.Name} {doctor?.LastName}";
}

<div class="container mt-4">
    <h3 class="text-center mb-4 text-light">Appointments for Dr. @doctor.Name @doctor.LastName</h3>

    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <th>Date</th>
            <th>Hour</th>
            <th>Patient</th>
            <th>State</th>
            <th>Observations</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Date.ToShortDateString()</td>
                <td>@a.Hour</td>
                <td>@a.Patient?.Name @a.Patient?.Lastname</td>
                <td>@a.State</td>
                <td>@a.Observations</td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</div>