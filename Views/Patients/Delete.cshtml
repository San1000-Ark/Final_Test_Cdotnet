@model Test_Santiagorestrepoarismendy.Models.Patient
@{
    ViewData["Title"] = "Delete Patient";
}

<h2 class="mb-4 text-danger">Are you sure you want to delete this patient?</h2>

<div class="card border-danger">
    <div class="card-body">
        <h5 class="card-title">@Model.Name @Model.Lastname</h5>
        <p><strong>Birth Date:</strong> @Model.BirthDate.ToShortDateString()</p>
        <p><strong>Symptom:</strong> @Model.Symptom</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"> Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary"> Cancel</a>
</form>